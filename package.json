{
  "name": "sqa",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "jest --coverage && open coverage/lcov-report/index.html",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:update": "jest --updateSnapshot",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "test:e2e:ci": "start-server-and-test start http://localhost:3000 'cypress run --record'",
    "test:component": "cypress run --component",
    "test:all": "npm run lint && npm run type-check && npm run test:ci && npm run test:e2e:headless",
    "quality:check": "npm run lint:strict && npm run type-check && npm run test:coverage",
    "quality:fix": "npm run lint:fix && npm run test:update",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "clean": "rimraf .next coverage cypress/screenshots cypress/videos",
    "clean:install": "npm run clean && rm -rf node_modules package-lock.json && npm install",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "deps:check": "ncu",
    "deps:update": "ncu -u && npm install",
    "sonar": "sonar-scanner",
    "sonar:local": "sonar-scanner -Dsonar.host.url=http://localhost:9000",
    "quality:sonar": "npm run test:coverage && npm run sonar"
  },
  "dependencies": {
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@cypress/react": "^9.0.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cypress": "^14.5.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "sonar-scanner": "^3.1.0",
    "sonarjs": "^0.2.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
